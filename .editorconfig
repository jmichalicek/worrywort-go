root = true

[*]
max_line_length = 120
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 2

[*.py]
indent_style = space
indent_size = 4
# isort settings
line_length = 120
known_django=django
sections=FUTURE,STDLIB,DJANGO,THIRDPARTY,FIRSTPARTY,LOCALFOLDER

[Makefile]
indent_style = tab
